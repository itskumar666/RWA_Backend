{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/assets/registry",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE"
  }
}
